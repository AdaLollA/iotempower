#!/bin/bash
if [[ $# -gt 0 || "$*" = "help" || "$*" = "-h" || "$*" = "--help" ]]; then
cat << EOF
Syntax: dongle_starter

Start dongle_daemon in a loop (restart when exit).

EOF
exit 1
fi

[ "$ULNOIOT_ACTIVE" = "yes" ] || { echo "ulnoiot not active, aborting." 1>&2;exit 1; }

while true; do
    sleep 1
    dongle daemon
    sleep 1
done

