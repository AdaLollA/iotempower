#!/bin/bash
# hard reset a connected esp device
#
# $1 device (if not given reset first found)

# find directory and read config
dir=$(cd -P -- "$(dirname -- "$0")" && pwd -P)
ULNOIOT_ROOT="$dir/.."
source "$ULNOIOT_ROOT/bin/read_config"


port=$("$dir/find_esp_port" "$1")

mpfshell -n -c "open tty$port" --reset

