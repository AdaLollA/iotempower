#!/bin/bash

if [[ $# -ne 0 ]]; then
cat << EOF
Syntax: mqtt_all

mqtt_listen subscribes to all messages of the currently selected mqtt broker.

The broker is based on an existing node.conf or sytem.conf.
EOF
exit 1
fi

[ "$IOTEMPOWER_ACTIVE" = "yes" ] || { echo "IoT empower not active, aborting." 1>&2;exit 1; }

exec mqtt_listen "/"
