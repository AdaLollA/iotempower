#!/bin/bash
# TUDO: as ulnoiot documentation is now creasted in sphinx, consider retiring this

if [[ $# -gt 0 || "$*" = "help" || "$*" = "-h" || "$*" = "--help" ]]; then
cat << EOF
Syntax: restview_starter

Start restview (for viewing ulnoiot documentation in a browser)
in a loop (restart when exit).

EOF
exit 1
fi

[ "$IOTEMPOWER_ACTIVE" = "yes" ] || { echo "IoT empower not active, aborting." 1>&2;exit 1; }

while true; do
    sleep 1
    # make doc directory
    mkdir -p "$IOTEMPOWER_LOCAL/webdoc"
    ln -f -s "$IOTEMPOWER_ROOT/doc" "$IOTEMPOWER_LOCAL/webdoc/doc"
    cd "$IOTEMPOWER_ROOT"
    restview -l 3000 -B . 
    sleep 1
done
